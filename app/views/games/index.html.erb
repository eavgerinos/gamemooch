<%= form_tag(games_path, :method => "get", id: "search-form") do %>
	<div class="row">
		<div class="col-lg-12">
			<div class="input-group">
				<%= text_field_tag :query, params[:search], placeholder: "Search Games", class: "form-control" %>
				<span class="input-group-btn">
					<%= submit_tag "Search" , class: "btn btn-default"%>
				</span>
			</div><!-- /input-group -->
		</div><!-- /.col-lg-12 -->
	</div><!-- /.row -->
<% end %>
<%= render template: "application/games_grid" %>
